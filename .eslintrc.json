{
  "root": true,
  "ignorePatterns": ["dist","node_modules"],
  "overrides": [
    {
      "files": ["packages/**/*.ts"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
      "rules": { "@typescript-eslint/no-explicit-any": "off" }
    }
  ]
}
